<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>
<% if @user.image && @user.image.url %>
<p>画像: <%= image_tag @user.image.url, class: "user-image-show" %></p>
<% end %>
<%= link_to "編集する", edit_user_path(@user.id) %>
<%= link_to '投稿一覧へ', pictures_path, class: "btn btn-primary"%>
<%= link_to "", session_path(current_user.id), method: :delete, class: "glyphicon glyphicon-log-out logout" %>
