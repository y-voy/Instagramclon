<!DOCTYPE html>
<html>
  <head>
    <title>Chanstagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="col-md-4">
            <img src="/assets/logo.png" class="logo">
          </div>
          <div class="col-md-4">
            <% if logged_in? %>
            <div class="post-nav-flame">
              <%= link_to '', new_picture_path, class: "glyphicon glyphicon-pencil post-nav" %>
            </div>
            <% end %>
          </div>
          <div class="col-md-4 user-nav">
            <% if logged_in? %>
            <%= link_to "", pictures_path, class: "glyphicon glyphicon-home home-nav" %>
              <%= link_to "", favorite_list_picture_path(current_user.id), class: "glyphicon glyphicon-check favorite-list" %>
              <%= link_to "", users_path, class: "glyphicon glyphicon-user user-list" %>
              <%= image_tag current_user.image.url, class: 'user-image' %>
              <%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname-nav" %>
              <%= link_to "", session_path(current_user.id), method: :delete, class: "glyphicon glyphicon-log-out logout-nav" %>
            <% else %>
              <%= link_to "Login", new_session_path, class: "btn btn-default" %>
              <%= link_to "Sign up", new_user_path, class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </nav>
      <div class="main-content">
      <%= yield %>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
