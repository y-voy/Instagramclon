<!DOCTYPE html>
<html>
  <head>
    <title>Instagramclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="col-md-3"></div>
          <div class="col-md-5"></div>
          <div class="col-md-4 user-nav">
            <% if logged_in? %>
            <%= link_to "", pictures_path, class: "glyphicon glyphicon-home home-nav" %>
            <% if current_user.favorites.present? %>
              <%= link_to "", favorite_list_picture_path(current_user.id), class: "glyphicon glyphicon-check favorite-list" %>
              <% else %>
              <a class="glyphicon glyphicon-check favorite-list"></a>
              <% end %>
              <%= link_to "", users_path, class: "glyphicon glyphicon-user user-list" %>
              <%= image_tag current_user.image.url, class: 'user-image' %>
              <%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname-nav" %>
            <% else %>
              <%= link_to "Sign up", new_user_path %>
              <%= link_to "Login", new_session_path %>
            <% end %>
          </div>
        </div>
      </nav>
      <%= yield %>
    </div>
    <!-- <footer>
      <p>Powered by Yuji Moriya</p>
      <p>Â© 2021 Yuji Moriya</p>
    </footer> -->
  </body>
</html>
