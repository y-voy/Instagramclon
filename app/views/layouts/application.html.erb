<!DOCTYPE html>
<html>
  <head>
    <title>Instagramclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <% if logged_in? %>
      <%= link_to "Profile", user_path(current_user.id) %>
      <%= link_to "Logout", session_path(current_user.id), method: :delete %>
      <%= link_to "Favorite List", favorite_list_picture_path(current_user.id) %>
      <% if current_user.image && current_user.image.url %>
      <%= image_tag current_user.image.url, class: 'user-image' %>
      <% end %>
      <a class="nav-link"><%= current_user.nickname %></a>
    <% else %>
      <%= link_to "Sign up", new_user_path %>
      <%= link_to "Login", new_session_path %>
    <% end %>
    <%= yield %>
    </div>
    <footer>
      <p>Powered by Yuji Moriya</p>
      <p>Â© 2021 Yuji Moriya</p>
    </footer>
  </body>
</html>
